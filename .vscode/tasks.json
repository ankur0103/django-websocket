{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-redis",
            "type": "shell",
            "command": "redis-server",
            "args": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Ready to accept connections.*",
                    "endsPattern": ".*Server initialized.*"
                }
            }
        },
        {
            "label": "start-redis-docker",
