{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Django WebSocket Server (Development)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app",
                "DJANGO_SETTINGS_MODULE": "app.settings",
                "DEBUG": "True",
                "COLOR": "blue",
                "REDIS_URL": "redis://localhost:6379/0"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Django WebSocket Server (ASGI/Uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.asgi:application",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--workers",
                "1",
                "--loop",
                "asyncio"
            ],
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app",
                "DJANGO_SETTINGS_MODULE": "app.settings",
                "DEBUG": "True",
                "COLOR": "blue",
                "REDIS_URL": "redis://localhost:6379/0"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Django WebSocket Server (Production ASGI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.asgi:application",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--workers",
                "4",
                "--loop",
                "uvloop",
                "--worker-class",
                "uvicorn.workers.UvicornWorker"
            ],
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app",
                "DJANGO_SETTINGS_MODULE": "app.settings",
                "DEBUG": "False",
                "COLOR": "blue",
                "REDIS_URL": "redis://localhost:6379/0"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Django WebSocket Server (Single Worker Debug)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.asgi:application",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--workers",
                "1",
                "--loop",
                "asyncio",
                "--log-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app",
                "DJANGO_SETTINGS_MODULE": "app.settings",
                "DEBUG": "True",
                "COLOR": "blue",
                "REDIS_URL": "redis://localhost:6379/0",
                "GRACEFUL_SHUTDOWN_TIMEOUT": "5"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Django WebSocket Server (With Redis)",
